<Window x:Class="Словарь_ресурсов.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Словарь_ресурсов"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Button" Click="button_Click" />
        <Button x:Name="button1" Content="Button" Grid.Column="1" />
        <Button x:Name="button2" Content="Button" Grid.Row="1" />
        <Button x:Name="button3" Content="Button" Grid.Column="1"  Grid.Row="1" />
    </Grid>
</Window>
